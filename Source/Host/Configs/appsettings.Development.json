{
  "Main": {
    "Name": "api",
    "CorsOrigin": "http://localhost:4200"
  },
  "Database": {
    "ConnectionString": "Server=localhost,1433;Database=Quizi;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True;"
  },
  "Swagger": {
    "Enabled": true,
    "ReDocEnabled": false,
    "Name": "v1",
    "Title": "API",
    "Version": "v1",
    "RoutePrefix": "docs",
    "IncludeSecurity": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore.Mvc": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.AspNetCore.Hosting": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Identity": {
    "Issuer": "quizi-identity-service",
    "Audience": "quizi-web",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  }
}
